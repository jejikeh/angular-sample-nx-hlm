{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": [
      "es2020",
      "dom"
    ],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@spartan-ng/ui-button-helm": [
        "ui-button-helm/src/index.ts"
      ],
      "@spartan-ng/ui-alert-helm": [
        "ui-alert-helm/src/index.ts"
      ],
      "@spartan-ng/ui-icon-helm": [
        "ui-icon-helm/src/index.ts"
      ],
      "@spartan-ng/ui-card-helm": [
        "ui-card-helm/src/index.ts"
      ],
      "@spartan-ng/ui-typography-helm": [
        "ui-typography-helm/src/index.ts"
      ],
      "@spartan-ng/ui-label-helm": [
        "ui-label-helm/src/index.ts"
      ],
      "@spartan-ng/ui-input-helm": [
        "ui-input-helm/src/index.ts"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "tmp"
  ]
}
